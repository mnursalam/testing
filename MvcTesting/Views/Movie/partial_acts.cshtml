@model IEnumerable<MvcTesting.Models.Act>
@helper Truncate(string input, int length)
{
     if (input.Length <= length) {
          @input
     } else {
          @input.Substring(0, length)<text>...</text>
     }
} 

@helper JenisKelamin(int input)
{
     if (input == 1) {
          <text>Laki Laki</text>
     } else if (input == 2) {
          <text>Perempuan</text>
     } else {
         <text>...</text>
     }
} 


